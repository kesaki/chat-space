.side-bar
  .side-bar__header
    .header-box
      %h3
        =current_user.name
      %ul.header-box__menu
        %li
          = link_to new_group_path , class: "header-box__menu__new-group" do
            %i.fa.fa-edit
        %li
          = link_to edit_user_path(current_user.id) , class: "header-box__menu__edit" do
            %i.fa.fa-cog

  .group-list
    - current_user.groups.each do |group|
      .group-list__group
        = link_to group_messages_path(group) do 
          .roup-list__group__name
            = group.name
          .group-list__group__new-message      
            = group.show_last_message